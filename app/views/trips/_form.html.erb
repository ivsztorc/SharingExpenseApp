  <ul>
    <% @trip.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :tripname %><br>
  <%= f.text_field :tripname %>
</div>

<div class="currency">
  <%= f.label :currency, :class=> "selector" %>
  <%= f.collection_select :currency_id, Currency.all.order(:name),:id,:name %>
</div>

<div class="country">
  <%= f.label :country, :class=> "selector" %>
  <%= f.collection_select :country_id, Country.all.order(:name),:id,:name %>
</div>


<%#= link_to 'Add Participant', new_participant_path, :class=> "btn" %>

