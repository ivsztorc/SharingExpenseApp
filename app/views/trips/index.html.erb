
<p id="notice"><%= notice %></p>
<h1>Listing Trips</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Currency</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @trips[0,3].each do |trip| %>
      <tr>
        <td><%= trip.name %></td>
        <td><%= trip.country_id %></td>
        <td><%= trip.currency_id %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Trip', new_trip_path %>
