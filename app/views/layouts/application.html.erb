<!DOCTYPE html>
<html>
<head>
  <title>ExpenseShare</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  <link rel="stylesheet" href="https://i.icomoon.io/public/temp/ff765ec907/Expenseshare/style.css">
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

  <meta name="viewport" content="initial-scale=1.0, user-scalable=no">

</head>
<body <% if user_signed_in? %>class="logged-in"<% end %>>
  <header class="header">
    <%= link_to raw(image_tag("expenseezlogo.svg", :alt => "Expenseezlogo", :class=> "logo" )), '/' %>
    <div class="account">
      <% if !user_signed_in? %>
      <%= link_to 'Login', new_user_session_path %>
      <% else %>
      <%= link_to "Account", edit_user_registration_path %>
      <% end %>
    </div> 
  </header>
  <section class="wrapper">
    <main class="main">
      <%= yield %>
    </main>
 </section>
 <script type="text/javascript">
   
   $(function() {
     $( "#expense_datepicker" ).datepicker();
   });

 </script>

</body>
</html>